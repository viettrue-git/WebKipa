@model WebApp.Models.UserModel;
@{
    ViewData["Title"] = "CreateUser";
    Layout = "~/Areas/Admin/Views/_LayoutAdmin.cshtml";
}

        @using (Html.BeginForm("CreateUser", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                        <div class="col-lg-7">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Thêm mới tài khoản!</h1>
                                </div>
                                <form class="user">
                                    <div class="form-group row">
                                        <div class="col-sm-6 mb-3 mb-sm-0">
                                    @Html.TextBoxFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control form-control-user" }, @type = "Text", @class = "form-control", @placeholder = "Tên đăng nhập" })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
@*                                             <input type="text" class="form-control form-control-user" id="UserName"
                                                   placeholder="Tên đăng nhập"> *@
                                        </div>
                                        <div class="col-sm-6">
                                    @Html.TextBoxFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control form-control-user" }, @type = "Text", @class = "form-control", @placeholder = "Mã người dùng" })
                                    @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                                            @* <input type="text" class="form-control form-control-user" id="UserId"
                                                   placeholder="Họ tên"> *@
                                        </div>
                                    </div>
                                    <div class="form-group">
                                    @Html.TextBoxFor(model => model.Email, new { htmlAttributes = new { @class = "form-control form-control-user" }, @type = "Text", @class = "form-control", @placeholder = "Email" })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                                        @* <input type="email" class="form-control form-control-user" id="Email"
                                               placeholder="Email"> *@
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-6 mb-3 mb-sm-0">
                                    @Html.TextBoxFor(model => model.Password, new { htmlAttributes = new { @class = "form-control form-control-user" }, @type = "Text", @class = "form-control", @placeholder = "Mật khẩu" })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                            @* <input type="password" class="form-control form-control-user"
                                                   id="exampleInputPassword" placeholder="Password"> *@
                                        </div>
                                        <div class="col-sm-6">
                                            <input type="password" class="form-control form-control-user"
                                                   id="exampleRepeatPassword" placeholder="Repeat Password">
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-user btn-block">
                                        Đăng ký
                                    </button>
                                    <hr>
                                    <a href="index.html" class="btn btn-google btn-user btn-block">
                                        <i class="fab fa-google fa-fw"></i> Đăng nhập bằng Google
                                    </a>
                                    <a href="index.html" class="btn btn-facebook btn-user btn-block">
                                        <i class="fab fa-facebook-f fa-fw"></i> Đăng nhập bằng FaceBook
                                    </a>
                                </form>
                                <hr>
                                <div class="text-center">
                                    <a class="small" href="forgot-password.html">Quên mật khẩu?</a>
                                </div>
                                <div class="text-center">
                                    <a class="small" href="login.html">Bạn đã có tài khoản? Đăng nhập!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        
<div>
    @Html.ActionLink("Back to List", "Index")
</div>