@model List<WebApp.Models.UserModel>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/_LayoutAdmin.cshtml";
}

<div class="table-responsive">
    <div>
        <a style="float:right;margin:10px 0px" href="@Url.Action("CreateUser","User")" class="btn btn-primary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-flag"></i>
            </span>
            <span class="text">Thêm mới</span>
        </a>
    </div>
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Mã người dùng</th>
                <th>Tên người dùng</th>
                <th>Tên đăng nhập</th>
                <th>SĐT</th>
                <th>Email</th>
                <th>Ghi chú</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.UserName</td>
                        <td>@item.UserId</td>
                        <td>@item.UserName</td>
                        <td>@item.UserName</td>
                        <td>@item.UserName</td>
                        <td>@item.UserName</td>
                    </tr>
                }
            }
            @{
                if (Model.Count == 0)
                {
                    <tr>
                        <td style="text-align:center" colspan="6">Không có dữ liệu để hiển thị</td>
                    </tr>
                }

            }
        </tbody>
    </table>
</div>

