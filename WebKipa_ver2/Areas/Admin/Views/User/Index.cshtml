@model List<WebApp.Models.UserModel>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/_LayoutAdmin.cshtml";
}

<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Mã người dùng</th>
                <th>Tên người dùng</th>
                <th>Tên đăng nhập</th>
                <th>SĐT</th>
                <th>Email</th>
                <th>Ghi chú</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.UserName</td>
                        <td>@item.UserId</td>
                        <td>@item.UserName</td>
                        <td>@item.UserName</td>
                        <td>@item.UserName</td>
                        <td>@item.UserName</td>
                    </tr>
                }
            }
            @{
                if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="6">Không có dữ liệu để hiển thị</td>
                    </tr>
                }

            }
        </tbody>
    </table>
</div>

